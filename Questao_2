Console.WriteLine("Calcular Poupança");

double valorInvestido = 1000;
int contadorMes = 1;

//rendimento de 0.05% = 0.0005
while (contadorMes <= 12)
{
	valorInvestido = valorInvestido + valorInvestido * 0.0005;
		
	Console.WriteLine("Após " + contadorMes + " mês(es), o valor será de " 
		+ valorInvestido);

	contadorMes = contadorMes + 1;
}

Console.WriteLine("Calcular Corrente");

double valorInvestido = 1000;
int contadorMes = 1;

//rendimento de 0.03% = 0.0003
while (contadorMes <= 12)
{
	valorInvestido = valorInvestido + valorInvestido * 0.0003;
		
	Console.WriteLine("Após " + contadorMes + " mês(es), o valor será de " 
		+ valorInvestido);

	contadorMes = contadorMes + 1;
}
Console.ReadLine();
